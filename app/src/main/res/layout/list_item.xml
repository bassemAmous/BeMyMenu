<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/avatar"
        android:layout_height="200dp"
        android:src="@drawable/back_blur"
        tools:background="#AAA"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="21dp"
        android:textStyle="normal"
        tools:text="Pseudo"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/avatar" />

    <TextView
        android:text="prixtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:id="@+id/prixTotal"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="21dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="21dp"
        app:layout_constraintTop_toTopOf="@+id/quantite" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:id="@+id/quantite"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/avatar"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="16dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantite :"
        android:textColor="@color/md_white_1000"

        android:id="@+id/textView"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/quantite"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/price"
        android:id="@+id/priceMV"

        app:layout_constraintRight_toRightOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="@+id/avatar" />

    <TextView
        android:id="@+id/prix"
        android:layout_width="59dp"
        android:layout_height="16dp"
        android:textColor="@android:color/white"
        tools:text="Texte de mon tweet"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/priceMV"
        app:layout_constraintBottom_toBottomOf="@+id/priceMV"
        app:layout_constraintTop_toTopOf="@+id/priceMV" />
    <TextView
        android:text="Total:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalText"
        app:layout_constraintRight_toLeftOf="@+id/prixTotal"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/prixTotal" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundland"
    tools:context="co.esprit.bemymenuapp.LoginActivity">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/logoo"
        android:id="@+id/imageView3"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/right"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/top"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1143dp"
        android:id="@+id/left"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="12dp"
        app:layout_constraintGuide_percent="0.01459854" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1143dp"
        android:id="@+id/right"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="800dp"
        app:layout_constraintGuide_percent="1.0" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="866dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.7576553"
        />
    <android.support.constraint.Guideline
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="78dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.067993365"
        />



    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="517dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.4524887"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1143dp"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="655dp"
        app:layout_constraintGuide_percent="0.81875"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1143dp"
        android:id="@+id/rakahForm"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintGuide_percent="0.25125"
        tools:layout_editor_absoluteX="201dp" />

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="#E4F1FE"
        android:alpha="0.6"
        android:id="@+id/zina"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp">


    </android.support.constraint.ConstraintLayout>
    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:inputType="textPassword"
        android:width="300dp"

        android:backgroundTint="#FFFFFF"
        android:background="@drawable/rounded"
        android:ellipsize="start"
        android:gravity="center"

        android:hint="Password"
        android:autoText="true"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintLeft_toLeftOf="@+id/zina"
        app:layout_constraintRight_toRightOf="@+id/zina"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginBtm"
        android:onClick="loginBtn"
        android:background="@drawable/roundedbutton"
        android:textColor="#ffff"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintRight_toRightOf="@+id/login"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/login"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp" />

    <EditText
        android:id="@+id/login"
        android:layout_width="0dp"
        android:width="300dp"

        android:background="@drawable/rounded"
        android:backgroundTint="#FFFFFF"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Login"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/zina"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/zina"
        app:layout_constraintRight_toRightOf="@+id/zina"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp" />

</android.support.constraint.ConstraintLayout>
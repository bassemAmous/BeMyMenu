<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rlRotate"
    tools:context=".MainActivity"
    android:background="@drawable/back_blur">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="600dp"
        android:id="@+id/logo"
        android:layout_marginTop="0dp" />


    <GridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
       android:layout_marginLeft="270dp"
        android:numColumns="auto_fit"
        android:layout_alignTop="@+id/listView">

    </GridView>
    <ListView
        android:id="@+id/listView"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:layout_width="260dp"
        ></ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:visibility="invisible"
        android:id="@+id/nomRestaut" />

    <Button
        android:text="rafrechir"
        android:onClick="rafrechir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="0dp"

        android:id="@+id/refresh" />



    <Button

        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/shoppingcart"
        android:id="@+id/button2"
        android:onClick="panieer"
android:layout_marginTop="20dp"
 android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_notification_overlay"

        android:id="@+id/imageVNotif"

   android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:text="1"
        android:textColor="@color/md_white_1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ddddlfp"
     android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="13dp"/>

    <SearchView
        android:layout_width="300dp"
        android:backgroundTint="#FFFFFF"
        android:background="@drawable/rounded"
        android:layout_height="50dp"
        android:id="@+id/recheche"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="290dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

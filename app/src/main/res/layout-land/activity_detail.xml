<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.esprit.bemymenuapp.DetailActivity"
    android:background="@drawable/back_blur">


    <ImageView
        app:srcCompat="@drawable/back"
        android:id="@+id/image"
        android:layout_width="0dp"

        android:layout_height="0dp"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pseudo"
        android:textSize="30dp"

        android:layout_marginStart="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/price"
        android:id="@+id/priceMV"

        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="@+id/image"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/image"
        android:layout_marginTop="64dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/description"
        android:textSize="22dp"

        app:layout_constraintRight_toRightOf="@+id/priceMV"
        app:layout_constraintLeft_toLeftOf="@+id/priceMV"
        app:layout_constraintBottom_toBottomOf="@+id/priceMV"
        app:layout_constraintTop_toTopOf="@+id/priceMV"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
       />

    <TextView
        android:text="50 $"
        android:layout_height="0dp"
        android:id="@+id/prix"
        android:textSize="30dp"


        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/image"
        android:layout_marginLeft="24dp"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        android:layout_marginBottom="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="535dp"
        app:layout_constraintGuide_percent="0.41796875"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="399dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.60181"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/soundonflat"
        android:id="@+id/soundButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="@+id/pseudo"
        app:layout_constraintLeft_toLeftOf="@+id/pseudo"
        app:layout_constraintTop_toTopOf="@+id/pseudo"
        android:layout_marginTop="20dp"
        android:background="@null"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/actionModeShareDrawable"
        android:id="@+id/imageButton3"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/soundButton"
        android:layout_marginLeft="8dp" />
</android.support.constraint.ConstraintLayout>
